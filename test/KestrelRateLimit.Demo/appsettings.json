{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [ "delete:/api/values", "delete:/api/items" ],
    "ClientWhitelist": [ "cl-key-a", "cl-key-b" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 600
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 1000
      }
    ],
    "ClientRules": [
      {
        "ClientId": "anon",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 100
          },
          {
            "Endpoint": "*:/api/values",
            "Period": "1s",
            "Limit": 50
          },
          {
            "Endpoint": "get:/api/values",
            "Period": "1s",
            "Limit": 15
          },
          {
            "Endpoint": "*:/api/items",
            "Period": "1s",
            "Limit": 10
          },
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 20
          },
          {
            "Endpoint": "*:/api/items",
            "Period": "15m",
            "Limit": 50
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 60
          },
          {
            "Endpoint": "*",
            "Period": "1d",
            "Limit": 10
          }
        ]
      },
      {
        "ClientId": "cl-key-2",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 3
          },
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 16
          }
        ]
      }
    ]
  },

  "RateLimiting": {
    "PerSecond": 2,
    "PerMinute": 6,
    "PerHour": 10,
    "PerDay": 0,
    "PerWeek": 0,
    "StoreOptionsInCache": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "BypassHeader": "X-Bypass",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "8.8.8.8", "192.168.0.0/24" ],
    "IpRules": [
      {
        "Value": "::1/10",
        "PerSecond": 2,
        "PerMinute": 60,
        "PerHour": 0,
        "PerDay": 0,
        "PerWeek": 0
      },
      {
        "Value": "84.247.85.226",
        "PerSecond": 1,
        "PerMinute": 6,
        "PerHour": 0,
        "PerDay": 0,
        "PerWeek": 0
      }
    ],
    "EnableEndpointRateLimiting": true,
    "EndpointWhitelist": [ "delete:/api/values", "/api/items" ],
    "EndpointRules": [
      {
        "Value": "get:/api/values",
        "PerSecond": 1,
        "PerMinute": 10,
        "PerHour": 0,
        "PerDay": 0,
        "PerWeek": 0
      },
      {
        "Value": "post:/api/values",
        "PerSecond": 2,
        "PerMinute": 30,
        "PerHour": 0,
        "PerDay": 0,
        "PerWeek": 0
      }
    ],
    "ClientWhitelist": [ "bypass-key-1", "bypass-key-2" ]
  }
}
